<article class="product-item">
  <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
  <div class="product-item-content"  action="/admin/products/delete/<%= product.id + "?_csrf=" +locals.csrfToken %>" method="POST">
    <h2><%= product.title %></h2>
    <form class="product-item-actions">
      <a href="/admin/products/<%= product.id %>" class="btn btn-alt">View and edit</a>
      <button class="btn btn-alt" data-productId="<%= product.id %>" data-csrf="<%= locals.csrfToken %>">Delete</button>
    </form>
  </div>
</article>